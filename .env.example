# 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# ===================
# 数据库配置
# ===================

# SQLite (默认)
DATABASE_URL=sqlite:///./order_system.db

# PostgreSQL (推荐生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/order_system
# DB_USER=admin
# DB_PASSWORD=your_secure_password

# MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/order_system

# ===================
# 后端配置
# ===================

# 应用密钥 (生产环境必须修改)
SECRET_KEY=your-super-secret-key-change-this-in-production

# 运行环境
ENVIRONMENT=development

# 服务端口
PORT=8000

# CORS 允许的源 (生产环境应该限制具体域名)
CORS_ORIGINS=http://localhost:3000,http://localhost

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# 前端配置
# ===================

# API 基础地址
# 开发环境: 直接访问后端服务
# 生产环境: 通过 Nginx 代理访问
NEXT_PUBLIC_API_URL=http://localhost/api

# 应用标题
NEXT_PUBLIC_APP_TITLE=订单管理系统

# 是否启用调试模式
NEXT_PUBLIC_DEBUG=false

# ===================
# Docker 配置
# ===================

# 容器端口映射
FRONTEND_PORT=3000
BACKEND_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===================
# 日志配置
# ===================

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE=./logs/app.log

# ===================
# 缓存配置
# ===================

# Redis 配置 (可选)
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password

# ===================
# 文件上传配置
# ===================

# 上传文件大小限制 (MB)
MAX_FILE_SIZE=10

# 上传文件存储路径
UPLOAD_PATH=./uploads

# 允许的文件类型
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ===================
# 邮件配置 (可选)
# ===================

# SMTP 服务器配置
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_TLS=true

# ===================
# 监控配置 (可选)
# ===================

# 健康检查间隔 (秒)
HEALTH_CHECK_INTERVAL=30

# 性能监控
ENABLE_METRICS=false

# ===================
# 安全配置
# ===================

# 密码加密轮数
BCRYPT_ROUNDS=12

# 会话超时时间 (分钟)
SESSION_TIMEOUT=60

# API 请求频率限制 (每分钟)
RATE_LIMIT_PER_MINUTE=100