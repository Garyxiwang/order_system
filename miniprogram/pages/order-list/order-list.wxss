/* pages/order-list/order-list.wxss */
.order-list-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-top: 0;
  position: relative;
}

/* 状态栏占位 - 让header背景延伸到顶部 */
.status-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 11;
  background: transparent;
  pointer-events: none;
}

/* 列表标题头部 - 固定定位 */
.list-header {
  position: sticky;
  top: 0;
  padding: 0 30rpx 30rpx;
  background: #5b7fff;
  color: #fff;
  margin-top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 12rpx rgba(91, 127, 255, 0.2);
}

/* header背景延伸到顶部覆盖状态栏 */
.list-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #5b7fff;
  z-index: -1;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  flex: 1;
}

.list-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.list-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  font-weight: 300;
}

.filter-bar {
  padding: 20rpx 30rpx;
  background-color: #5b7fff;
  position: sticky;
  top: 0;
  z-index: 99;
  margin-top: 0;
}

.filter-btn {
  width: 100%;
  height: 64rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.2) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.4) !important;
  color: #fff !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-btn::after {
  border: none;
}

.order-list {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.order-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.order-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
}

.order-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-number {
  flex: 1;
}

.number-label {
  display: block;
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 8rpx;
}

.number-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #323233;
  letter-spacing: 1rpx;
}

.customer-info {
  margin-bottom: 24rpx;
}

.customer-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
  overflow: hidden;
}

.name-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.name-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background-color: #f7f8fa;
  border-radius: 16rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
}

.detail-icon {
  font-size: 28rpx;
  width: 40rpx;
  text-align: center;
}

.detail-label {
  color: #646566;
  min-width: 120rpx;
}

.detail-value {
  color: #323233;
  font-weight: 500;
  flex: 1;
}

.order-footer {
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.amount-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff5f5;
  border-radius: 16rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #646566;
}

.amount-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ee0a24;
  letter-spacing: 1rpx;
}

.card-arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #d9d9d9;
  font-weight: 300;
}

.empty-state {
  margin-top: 100rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
}

.no-more {
  padding: 40rpx 0;
}

/* 状态标签样式 */
.status-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  border: none;
  white-space: nowrap;
}
