/* pages/order-list/order-list.wxss */
.order-list-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f2f5 0%, #f7f8fa 100%);
}

.filter-bar {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.filter-btn {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
}

.filter-btn::after {
  border: none;
}

.order-list {
  padding: 30rpx;
  padding-bottom: 60rpx;
}

.order-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.order-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
}

.order-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-number {
  flex: 1;
}

.number-label {
  display: block;
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 8rpx;
}

.number-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #323233;
  letter-spacing: 1rpx;
}

.customer-info {
  margin-bottom: 24rpx;
}

.customer-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.name-icon {
  font-size: 32rpx;
}

.name-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #f0f2f5 100%);
  border-radius: 16rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
}

.detail-icon {
  font-size: 28rpx;
  width: 40rpx;
  text-align: center;
}

.detail-label {
  color: #646566;
  min-width: 120rpx;
}

.detail-value {
  color: #323233;
  font-weight: 500;
  flex: 1;
}

.order-footer {
  padding-top: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.amount-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  border-radius: 16rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #646566;
}

.amount-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ee0a24;
  letter-spacing: 1rpx;
}

.card-arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #d9d9d9;
  font-weight: 300;
}

.empty-state {
  margin-top: 100rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
}

.no-more {
  padding: 40rpx 0;
}
