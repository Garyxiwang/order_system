/* pages/order-list/order-list.wxss */
.order-list-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-top: 0;
  position: relative;
}

/* 状态栏占位 - 让header背景延伸到顶部 */
.status-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 11;
  background: transparent;
  pointer-events: none;
}

/* 列表标题头部 - 固定定位 */
.list-header {
  position: sticky;
  top: 0;
  padding: 0 20rpx 20rpx;
  background: #5b7fff;
  color: #fff;
  margin-top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 12rpx rgba(91, 127, 255, 0.2);
}

/* header背景延伸到顶部覆盖状态栏 */
.list-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #5b7fff;
  z-index: -1;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 0.5rpx;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.header-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.filter-btn {
  flex: 1;
  height: 56rpx;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 28rpx;
  background-color: rgba(255, 255, 255, 0.2) !important;
  border: 2rpx solid rgba(255, 255, 255, 0.4) !important;
  color: #fff !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-btn::after {
  border: none;
}

.total-count {
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  white-space: nowrap;
  flex-shrink: 0;
}

.order-list {
  padding: 20rpx;
  padding-bottom: 60rpx;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.2s;
}

.order-card:active {
  transform: scale(0.99);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  letter-spacing: 0.5rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-row-with-action {
  justify-content: space-between;
}

.info-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.info-icon {
  flex-shrink: 0;
  margin-top: 2rpx;
}

.info-text {
  font-size: 26rpx;
  color: #646566;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.detail-link {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 12rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.detail-link-text {
  font-size: 24rpx;
  color: #1989fa;
  font-weight: 500;
}

.detail-link-icon {
  flex-shrink: 0;
}

.empty-state {
  margin-top: 100rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
}

.no-more {
  padding: 40rpx 0;
}

/* 状态标签样式 */
.status-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #fff;
  border: none;
  white-space: nowrap;
  flex-shrink: 0;
}
