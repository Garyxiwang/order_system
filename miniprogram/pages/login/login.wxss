/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
}

/* 状态栏占位 */
.status-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 3;
  background: transparent;
}

/* 背景图 */
.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  min-height: 100vh;
  z-index: 0;
}

/* 背景遮罩层，增强文字可读性 */
.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  min-height: 100vh;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 1;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 80rpx 50rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
}

.logo-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
  gap: 24rpx;
}

.logo-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #323233;
  letter-spacing: 2rpx;
  margin: 0;
}

.form-section {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.form-group {
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.form-field {
  padding: 50rpx 40rpx;
  min-height: 120rpx;
}

/* 输入框样式优化 */
.login-container .van-field__label {
  font-size: 32rpx;
  min-width: 140rpx;
  color: #323233;
}

.login-container .van-field__control {
  font-size: 32rpx;
  min-height: 60rpx;
  line-height: 60rpx;
}

.login-container .van-field__body {
  min-height: 60rpx;
}

.login-btn {
  margin-top: 20rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 500;
  background-color: #1989fa;
  border: none;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.8;
}
