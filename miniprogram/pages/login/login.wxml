<!--pages/login/login.wxml-->
<view class="login-container">
  <view class="login-box">
    <!-- Logo区域 -->
    <view class="logo-section">
      <text class="logo-text">进度管理系统</text>
    </view>

    <!-- 表单区域 -->
    <view class="form-section">
      <van-cell-group custom-class="form-group">
        <van-field
          value="{{ username }}"
          label="用户名"
          placeholder="请输入用户名"
          required
          clearable
          bind:change="onUsernameInput"
          border="{{ false }}"
          custom-class="form-field"
        />
        <van-field
          value="{{ password }}"
          type="password"
          label="密码"
          placeholder="请输入密码"
          required
          clearable
          bind:change="onPasswordInput"
          border="{{ false }}"
          custom-class="form-field"
        />
      </van-cell-group>

      <van-button
        type="primary"
        size="large"
        block
        round
        loading="{{ loading }}"
        disabled="{{ loading }}"
        bind:click="handleLogin"
        custom-class="login-btn"
      >
        {{ loading ? '登录中...' : '登录' }}
      </van-button>
    </view>
  </view>
</view>
