/* pages/order-detail/order-detail.wxss */
.order-detail-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 40rpx;
}

/* 优化 Vant CellGroup 样式 */
.order-detail-container .van-cell-group {
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.order-detail-container .van-cell-group__title {
  padding: 28rpx 32rpx;
  background-color: #1989fa;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.order-detail-container .van-cell {
  padding: 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-detail-container .van-cell:last-child {
  border-bottom: none;
}

.order-detail-container .van-cell__title {
  font-size: 28rpx;
  color: #646566;
  font-weight: 400;
  min-width: 160rpx;
}

.order-detail-container .van-cell__value {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
  flex: 1;
  text-align: right;
}

.order-number-cell .van-cell__value {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  letter-spacing: 1rpx;
}

/* 备注内容 */
.remarks-content {
  padding: 32rpx;
  background-color: #f7f8fa;
  font-size: 28rpx;
  color: #323233;
  line-height: 1.8;
  word-break: break-all;
  border-radius: 16rpx;
  margin: 20rpx;
}

/* 进度信息 */
.progress-item {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.progress-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #f7f8fa;
  border-bottom: 1rpx solid #ebedf0;
}

.progress-task {
  font-size: 30rpx;
  font-weight: 600;
  color: #323233;
  flex: 1;
}

.progress-details {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-icon {
  font-size: 28rpx;
  width: 40rpx;
  text-align: center;
}

.detail-text {
  font-size: 26rpx;
  color: #646566;
  line-height: 1.6;
  flex: 1;
}

.progress-remarks {
  padding: 0 32rpx 24rpx;
}

.progress-remarks .van-cell {
  padding: 20rpx 0;
  background: transparent;
  border: none;
}

.amount-cell .van-cell__value {
  color: #ee0a24;
  font-weight: bold;
  font-size: 40rpx;
  letter-spacing: 1rpx;
}

.loading {
  text-align: center;
  padding: 120rpx 0;
}

.error-state {
  margin-top: 100rpx;
}

/* 分割线优化 */
.order-detail-container .van-divider {
  margin: 24rpx 32rpx;
  border-color: #ebedf0;
}
