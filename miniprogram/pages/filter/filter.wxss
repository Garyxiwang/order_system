/* pages/filter/filter.wxss */
.filter-container {
  min-height: 100vh;
  background: #f5f7fa;
  padding-bottom: 140rpx;
  padding-top: 0;
  position: relative;
}

/* 状态栏占位 - 让header背景延伸到顶部 */
.status-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 11;
  background: transparent;
  pointer-events: none;
}

.filter-header {
  position: relative;
  padding: 0 30rpx 30rpx;
  background: #5b7fff;
  color: #fff;
  margin-top: 0;
  z-index: 9;
  box-shadow: 0 2rpx 12rpx rgba(91, 127, 255, 0.2);
}

/* header背景延伸到顶部覆盖状态栏 */
.filter-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #5b7fff;
  z-index: -1;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  flex: 1;
}

.filter-title {
  display: flex;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.filter-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  font-weight: 300;
}

.header-right {
  display: flex;
  align-items: center;
}

.logout-btn {
  background-color: rgba(255, 255, 255, 0.2) !important;
  border-color: rgba(255, 255, 255, 0.4) !important;
  color: #fff !important;
  font-size: 24rpx !important;
  padding: 8rpx 24rpx !important;
  height: auto !important;
  line-height: 1.5 !important;
}

.logout-btn::after {
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 20rpx;
}

.filter-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-top: 1rpx solid #e8ebf0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 90;
}

.reset-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #f5f7fa !important;
  color: #5b7fff !important;
  border: 2rpx solid #e8ebf0 !important;
  font-size: 30rpx;
  font-weight: 500;
}

.reset-btn::after {
  border: none;
}

.confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  background-color: #5b7fff;
  box-shadow: 0 4rpx 12rpx rgba(91, 127, 255, 0.3);
}

.confirm-btn::after {
  border: none;
}

/* 优化 Vant CellGroup 样式 */
.filter-container .van-cell-group {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 24rpx;
  background: #fff;
}

.filter-container .van-cell-group__title {
  padding: 28rpx 32rpx;
  background-color: #5b7fff;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.filter-container .van-cell {
  padding: 28rpx 32rpx;
  background: #fff;
}

.filter-container .van-cell__title {
  font-size: 30rpx;
  font-weight: 500;
  color: #323233;
}

.filter-container .van-field {
  padding: 24rpx 32rpx;
}

.filter-cell {
  transition: background-color 0.3s;
}

.filter-cell:active {
  background-color: #f5f7fa;
}

/* 优化 Checkbox 和 Radio 样式 */
.filter-container .van-checkbox,
.filter-container .van-radio {
  margin-right: 16rpx;
}

/* Picker 弹窗样式 */
.picker-popup {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f7fa;
}

.picker-header {
  display: flex;
  flex-direction: column;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #e8ebf0;
  background: #fff;
  gap: 16rpx;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5b7fff;
  width: 100%;
}

.picker-header-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 12rpx;
  width: 100%;
}

.select-all-btn {
  font-size: 20rpx !important;
  height: 40rpx !important;
  line-height: 40rpx !important;
  padding: 0 8rpx !important;
  min-width: auto !important;
  max-width: 100rpx !important;
  white-space: nowrap !important;
}

.picker-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

/* 选择器单元格样式 */
.picker-cell-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #e8ebf0;
  transition: background-color 0.3s;
}

.picker-cell-item:active {
  background-color: #f5f7fa;
}

.picker-cell-item:last-child {
  border-bottom: none;
}

.picker-cell-label {
  flex: 1;
  font-size: 30rpx;
  color: #323233;
  font-weight: 500;
}

.picker-checkbox-wrapper {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

