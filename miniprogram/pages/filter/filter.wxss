/* pages/filter/filter.wxss */
.filter-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f2f5 0%, #f7f8fa 100%);
  padding-bottom: 140rpx;
}

.filter-header {
  padding: 40rpx 30rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  margin-bottom: 20rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  flex: 1;
}

.filter-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.filter-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  font-weight: 300;
}

.header-right {
  display: flex;
  align-items: center;
}

.logout-btn {
  background-color: rgba(255, 255, 255, 0.2) !important;
  border-color: rgba(255, 255, 255, 0.5) !important;
  color: #fff !important;
  font-size: 24rpx !important;
  padding: 8rpx 24rpx !important;
  height: auto !important;
  line-height: 1.5 !important;
}

.logout-btn::after {
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
}

.filter-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-top: 1rpx solid #ebedf0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 90;
}

.reset-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #f7f8fa !important;
  color: #323233 !important;
  border: 2rpx solid #ebedf0 !important;
  font-size: 30rpx;
  font-weight: 500;
}

.reset-btn::after {
  border: none;
}

.confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

.confirm-btn::after {
  border: none;
}

/* 优化 Vant CellGroup 样式 */
.filter-container .van-cell-group {
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
}

.filter-container .van-cell-group__title {
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.filter-container .van-cell {
  padding: 28rpx 32rpx;
  background: #fff;
}

.filter-container .van-cell__title {
  font-size: 30rpx;
  font-weight: 500;
  color: #323233;
}

.filter-container .van-field {
  padding: 24rpx 32rpx;
}

.filter-cell {
  transition: background-color 0.3s;
}

.filter-cell:active {
  background-color: #f7f8fa;
}

/* 优化 Checkbox 和 Radio 样式 */
.filter-container .van-checkbox,
.filter-container .van-radio {
  margin-right: 16rpx;
}

/* Picker 弹窗样式 */
.picker-popup {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #fff;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.picker-content {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 0;
}

/* 选择器单元格样式 */
.picker-cell-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #ebedf0;
  transition: background-color 0.3s;
}

.picker-cell-item:active {
  background-color: #f7f8fa;
}

.picker-cell-item:last-child {
  border-bottom: none;
}

.picker-cell-label {
  flex: 1;
  font-size: 30rpx;
  color: #323233;
  font-weight: 500;
}

.picker-checkbox-wrapper {
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

