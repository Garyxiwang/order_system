{
  "name": "order-system-api",
  "build": {
    "commands": [
      "pip install --upgrade pip",
      "pip install -r requirements.txt",
      "python deploy.py"
    ]
  },
  "start": "uvicorn main:app --host 0.0.0.0 --port $PORT --workers 1",
  "environment": {
    "PYTHON_VERSION": "3.9",
    "ENVIRONMENT": "production",
    "PYTHONPATH": ".",
    "PYTHONUNBUFFERED": "1"
  },
  "healthcheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  }
}