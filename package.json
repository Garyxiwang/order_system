{
  "name": "order-system",
  "version": "1.0.0",
  "description": "订单管理系统 - 前后端分离项目",
  "private": true,
  "workspaces": [
    "front",
    "server"
  ],
  "scripts": {
    "dev:front": "cd front && npm run dev",
    "build:front": "cd front && npm run build",
    "start:front": "cd front && npm start",
    "dev:server": "cd server && python -m uvicorn main:app --reload",
    "install:all": "npm install && cd front && npm install && cd ../server && pip install -r requirements.txt"
  },
  "keywords": ["order-management", "nextjs", "fastapi", "typescript", "python"],
  "author": "Your Name",
  "license": "MIT"
}